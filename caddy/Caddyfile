{$DOMAIN:localhost} {
  # Static web client
  root * /srv
  file_server

  # API proxy
  handle /api/* {
    reverse_proxy api:3000
  }

  # Socket.IO proxy
  handle /socket.io/* {
    reverse_proxy api:3000
  }

  # Janus HTTP API
  handle /janus/* {
    reverse_proxy {$JANUS_HOST:host.docker.internal}:8088
  }

  # Janus WebSocket proxy
  handle /ws {
    reverse_proxy {$JANUS_HOST:host.docker.internal}:8188
  }
}
